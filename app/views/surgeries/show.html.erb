<h1><%= @surgery.title %></h1>

<p>Operating Room: <%= @surgery.room %></p>
<p>Number of Doctors Operating: <%= @surgery.doctors.length %></p>


<section class="surgeries">
  <p>Other Surgeries Happening Today:</p>
  <% @surgeries.each do |surgery| %>
    <% if surgery.day == @surgery.day %>
      <h3><%= surgery.title %></h3
    <% end %>
  <% end %>
</section>

<% @surgery.doctors.each do |doctor| %>
  <%= doctor.name %>
<% end %>

<p>Add a Doctor Form:</p>

<%= form_tag("/surgeries/#{@surgery.id}", method: :patch) do %>
  <%= label_tag "doctor_id" %>
  <%= text_field_tag :doctor_id %>

  <%= submit_tag "Add Doctor"%>
<% end %>
